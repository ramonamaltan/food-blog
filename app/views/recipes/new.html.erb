<div class="page-container">
  <%= form_with model: @recipe do |form| %>
    <div class="form-group">
      <%= form.text_field :name, placeholder: 'Name für dein Rezept' , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description, 'Anleitung' %>
      <%= form.rich_text_area :description, placeholder: 'Beschreibe die Zubereitung Schritt für Schritt' , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :photo, 'Rezept-Foto' %>
      <%= form.file_field :photo %>
    </div>
    <%= form.submit %>
  <% end %>
</div>
