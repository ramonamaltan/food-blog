<div class="container my-5">
  <h1 class="m-5">Add an Ingredient</h1>
  <%= simple_form_for [@recipe, @dose], html: { class: "form-group m-5"} do |f| %>
    <%= f.association :ingredient, prompt: 'Choose ingredient', input_html: {class: "form-control"} %>
    <%= f.input :amount, label: 'How much?', prompt: 'Choose dose?', input_html: {class: "form-control"} %>
    <%= f.input :unit %>
    <%= f.submit 'Add ingredient', class: 'btn btn-strong mt-3' %>
    <% end %>
</div>