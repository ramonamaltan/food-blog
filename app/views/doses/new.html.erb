<div class="page-container">
  <h3 class="my-5">Zutaten hinzufügen</h3>

  <div class="ingredients mb-5">
    <ul><% @recipe.ingredients.each do |ingredient| %>
      <li><%= ingredient.dose.amount %> <%= ingredient.dose.unit %>
      <%= ingredient.name %></li>  
    <% end %></ul>
  </div>

  <%= simple_form_for [@recipe, @dose], html: { class: "form-group"}, remote: true do |f| %>
    <%= f.input :amount, label: 'Menge', input_html: {class: "form-control"} %>
    <%= f.input :unit, label: 'Einheit' %>

    <%= f.simple_fields_for :ingredient do |ingredient| %>
    <%= ingredient.input :name %>
    <% end %>

    <%= f.submit 'Zutat hinzufügen', class: 'btn btn-petrol mt-3' %>
    <% end %>
    <%= link_to 'Fertig', recipe_path(@recipe), class: 'btn btn-petrol' %>

</div>